<% comments.each do |comment| %>
  <% if comment.id.present? %>

      <%= link_to user_path(comment.user.id) do %>
        <%= image_tag comment.user.icon.thumb.url %>
        <%= comment.user.name %>
      <% end %>

      <%= '：' %><%= time_ago_in_words(comment.created_at) %>前

      <div style="background: white;">

        <div class="comment-content" id="this_comment_<%= comment.id %>">
        <p><%= comment.content %></p>
        </div>

        
      </div>
      <div class="comments-icon-item">
          <div><%= link_to fa_icon("pencil 2x"), edit_topic_comment_path(topic, comment), remote: true %></div>

          <div><%= link_to fa_icon("trash 2x"), topic_comment_path(comment.topic_id, comment.id), method: :delete, remote: true, data: { confirm: "本当に削除しますか?"} %></div>
        </div>

      <hr>

  <% end %>
<% end %>

